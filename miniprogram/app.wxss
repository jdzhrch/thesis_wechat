/**app.wxss**/
@import "style/weui.wxss";
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-color: #f1f1f1;
} 
/*卡片效果*/
.card {
  border: 2px solid #fff;
  border-radius: 5px;
  background-color: #fff;
  box-shadow: 1px 1px 1px #ccc;
  margin: 8px;
  padding-left: 22rpx;
  padding-right: 22rpx;
  padding-top: 14rpx;
  padding-bottom: 14rpx;
  font-size: 14px;
  display: flex;
  flex-direction:row;
  align-items: center;
}
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
