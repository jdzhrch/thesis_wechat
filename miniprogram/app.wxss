@import "style/weui.wxss";
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background-color: #f1f1f1;
} 
/*卡片效果*/
.card {
  border: 2px solid #fff;
  border-radius: 5px;
  background-color: #fff;
  box-shadow: 1px 1px 1px #ccc;
  margin: 8px;
  position: relative;
}
