/* miniprogram/pages/my/my.wxss */

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
  margin-top: 300rpx;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 600rpx;
  color: #aaa;
}
